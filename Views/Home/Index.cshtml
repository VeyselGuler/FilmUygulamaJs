@{
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
        img {
            width: 100px; /* Görselin genişliği */
        }
    </style>
}

<h2>Film Bilgilerini Girin</h2>
<form id="filmForm">
    <label for="filmName">Film Adı:</label>
    <input type="text" id="filmName" name="name" required><br><br>

    <label for="filmDescription">Konusu:</label>
    <textarea id="filmDescription" name="description" required></textarea><br><br>

    <label for="filmCategory">Kategorisi:</label>
    <input type="text" id="filmCategory" name="category" required><br><br>

    <label for="filmRating">Puanı (1-10):</label>
    <input type="number" id="filmRating" name="rating" min="1" max="10" required><br><br>

    <label for="filmImage">Görsel URL'si:</label>
    <input type="text" id="filmImage" name="image" required><br><br>

    <input type="submit" value="Ekle">
</form>

<h2>Film Listesi</h2>
<table>
    <thead>
    <tr>
        <th>Film Adı</th>
        <th>Konusu</th>
        <th>Kategori</th>
        <th>Puanı</th>
        <th>Görsel</th>
    </tr>
    </thead>
    <tbody id="filmTableBody">
    </tbody>
</table>